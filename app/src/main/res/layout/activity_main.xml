<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.sudoku.SudokuBoardView
        android:id="@+id/sudokuBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/numberPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <Button android:id="@+id/btn1" android:text="1" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn2" android:text="2" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn3" android:text="3" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn4" android:text="4" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn5" android:text="5" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn6" android:text="6" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn7" android:text="7" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn8" android:text="8" android:layout_width="48dp" android:layout_height="48dp" />
        <Button android:id="@+id/btn9" android:text="9" android:layout_width="48dp" android:layout_height="48dp" />
    </LinearLayout>

</LinearLayout>
